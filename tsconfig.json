{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "lib",
    "module": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./src/**/*", "vitest.config.ts"]
}
