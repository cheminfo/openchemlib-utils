{
  "name": "openchemlib-utils",
  "version": "1.5.1",
  "description": "Various utilities that extends openchemlib-js like HOSE codes or diastereotopic IDs",
  "main": "lib/index.js",
  "module": "src/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "rollup -c && cheminfo-build --entry src/index.js --root OCLUtils",
    "eslint": "eslint src",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "rollup -c",
    "test": "npm run test-coverage && npm run eslint",
    "test-coverage": "jest --coverage",
    "test-only": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/openchemlib-utils.git"
  },
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/openchemlib-utils/issues"
  },
  "homepage": "https://github.com/cheminfo/openchemlib-utils#readme",
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "cheminfo-build": "^1.1.11",
    "eslint": "^7.32.0",
    "eslint-config-cheminfo": "^5.6.0",
    "eslint-plugin-import": "^2.25.2",
    "esm": "^3.2.25",
    "jest": "^27.2.5",
    "openchemlib": "7.4.0",
    "prettier": "^2.4.1",
    "rollup": "^2.58.0"
  },
  "dependencies": {
    "atom-sorter": "^1.1.9",
    "ensure-string": "^1.1.0",
    "ml-floyd-warshall": "^1.0.3",
    "ml-matrix": "^6.8.0",
    "papaparse": "^5.3.1",
    "sdf-parser": "^5.0.0"
  },
  "peerDependencies": {
    "openchemlib": ">=7.4.0"
  }
}
